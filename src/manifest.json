{
    "manifest_version": 2,
    "name": "${description}",
    "description": "Simplifies adding torrent, ed2k, ftp files to ASUS Download Master queue",
    "version": "${version}",
    "permissions": [
        "storage",
        "contextMenus",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "options_page": "options.html",
    "browser_action": {},
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "64": "icon64.png",
        "128": "icon128.png"
    }
}