{
    "manifest_version": 2,
    "name": "${description}",
    "description": "Simplifies adding torrent, ed2k, ftp files to ASUS Download Master queue",
    "version": "${version}",
    "permissions": [
        "storage",
        "contextMenus",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "options_page": "options.html",
    "browser_action": {},
    "icons": {
        "64": "icon.png"
    }
}